<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Course Progress</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f0f2f5;
      font-family: 'Arial', sans-serif;
    }
    .container {
      background-color: #fff;
      border-radius: 0.5rem;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 2rem;
      margin-top: 2rem;
    }
    h2 {
      color: #333;
      text-align: center;
      margin-bottom: 2rem;
    }
    .table {
      margin-bottom: 0;
    }
    .table th {
      background-color: #4caf50;
      color: #fff;
      border: none;
    }
    .table td {
      background-color: #f9f9f9;
      border: none;
      color: #555;
    }
    .progress-bar {
      background-color: #4caf50;
    }
    .progress-container {
      margin-top: 1rem;
    }
    .progress-text {
      font-size: 0.9rem;
      color: #555;
      text-align: center;
      margin-bottom: 1rem;
    }
  </style>
</head>
<body>
  <%- include('../partials/navbar', { user: user }) %>
  <div class="container">
    <h2>Course Progress</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Course</th>
          <th>Quizzes Completed</th>
          <th>Total Quizzes</th>
          <th>Progress</th>
        </tr>
      </thead>
      <tbody>
        <% progress.forEach(item => { %>
          <tr>
            <td><%= item.Course.title %></td>
            <td><%= item.quizzesCompleted %></td>
            <td><%= item.totalQuizzes %></td>
            <td>
              <div class="progress-container">
                <div class="progress-text">
                  <%= Math.round((item.quizzesCompleted / item.totalQuizzes) * 100) %>%
                </div>
                <div class="progress">
                  <div class="progress-bar" role="progressbar" style="width: <%= Math.round((item.quizzesCompleted / item.totalQuizzes) * 100) %>%;" aria-valuenow="<%= Math.round((item.quizzesCompleted / item.totalQuizzes) * 100) %>" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrap.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
