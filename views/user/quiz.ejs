<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= quiz.title %></title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .container {
      background-color: #fff;
      border-radius: 1rem;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 2rem;
      margin-top: 2rem;
    }
    h2 {
      color: #007bff;
      text-align: center;
      margin-bottom: 2rem;
    }
    .form-check-label {
      display: block;
      margin-bottom: 0.5rem;
    }
    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }
    .btn-primary:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }
  </style>
</head>
<body>
  <%- include('../partials/navbar', { user: user }) %>
  <div class="container">
    <h2><%= quiz.title %></h2>
    <form action="/courses/<%= quiz.courseId %>/quizzes/<%= quiz.id %>/submit" method="POST">
      <% quiz.Questions.forEach((question, index) => { %>
        <div class="form-group">
          <label><%= question.text %></label>
          <% question.options.forEach((option, i) => { %>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="answers[<%= index %>]" value="<%= i %>" id="question<%= index %>option<%= i %>" required>
              <label class="form-check-label" for="question<%= index %>option<%= i %>">
                <%= option %>
              </label>
            </div>
          <% }) %>
        </div>
      <% }) %>
      <div class="text-center">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
