<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Quizzes</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('../partials/navbar', { user: user }) %>
  <div class="container mt-4">
    <h2>Manage Quizzes for <%= course.title %></h2>
    <a href="/admin/courses/<%= course.id %>/quizzes/new" class="btn btn-primary mb-4">Add New Quiz</a>
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% course.Quizzes.forEach(quiz => { %>
          <tr>
            <td><%= quiz.title %></td>
            <td>
              <a href="/admin/courses/<%= course.id %>/quizzes/edit/<%= quiz.id %>" class="btn btn-warning btn-sm">Edit</a>
              <form action="/admin/courses/<%= course.id %>/quizzes/delete/<%= quiz.id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
              <a href="/admin/quizzes/<%= quiz.id %>/questions/new" class="btn btn-success btn-sm">Add Question</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
